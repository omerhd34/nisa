generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model SiteData {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  section   String   @unique
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("site_data")
}

model Home {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  welcomeText  String
  benefits     String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  @@map("home")
}

model About {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  text1     String
  text2     String
  text3     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("about")
}

model Work {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  subtitle   String
  workAreas  Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  @@map("work")
}

model Article {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  slug      String   @unique
  image     String
  readTime  String
  excerpt   String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("articles")
}

model Contact {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  subtitle  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("contact")
}


model Footer {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@map("footer")
}