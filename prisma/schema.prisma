generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Home {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  welcomeText String
  benefits    String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("home")
}

model About {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  text1     String
  text2     String
  text3     String
  edu1      String
  edu2      String
  edu3      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("about")
}

model Work {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  subtitle  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("work")
}

model Article {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  slug      String   @unique
  image     String
  readTime  String
  excerpt   String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("articles")
}

model Contact {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  subtitle  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contact")
}

model ContactMessage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())

  @@map("contact_messages")
}

model Footer {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("footer")
}